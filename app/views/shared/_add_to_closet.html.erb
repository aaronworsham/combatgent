<% if current_user %>
  <% if current_user.product_in_closet?(product) %>
    <%= button_to "Remove from closet", current_user.closet_item(product), :method => 'delete', :class => 'closet_button' %>
  <% else %>
    <%= form_for ClosetItem.new(:product => product) do |f| %>
      <%= f.hidden_field :product_id %>
      <%= f.submit "Save to closet", :class => 'closet_button' %>
    <% end %>
  <% end %>
<% else %>
  <%= button_to "Login to save to closet", login_path, :method => 'get', :class => 'closet_button' %>
<% end %>