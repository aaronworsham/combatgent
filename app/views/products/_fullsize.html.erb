<% if product.images.size > 1 %>	
  <%= link_to image_tag(product.images.second.attachment.url(:large)), product.images.second.attachment.url(:large), :class => 'single_image' %>	
<% else %>
	<%= link_to image_tag(product.images.first.attachment.url(:large)), product.images.first.attachment.url(:large), :class => 'single_image' %>	
<% end %>